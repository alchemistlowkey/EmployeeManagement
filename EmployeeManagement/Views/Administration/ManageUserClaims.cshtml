@model UserClaimsViewModel

<form
    method="post"
    class="mt-3"
>
    <div class="card">
        <div class="card-header">
            <h3>Manage User Claims</h3>
        </div>
        <div class="card-body">

            @for (int i = 0; i < Model.Cliams.Count; i++)
            {
                <div class="form-check m-2">
                    <input
                        type="hidden"
                        asp-for="@Model.Cliams[i].ClaimType"
                    />

                    <input
                        asp-for="@Model.Cliams[i].IsSelected"
                        class="form-check-input"
                    />
                    <label
                        asp-for="@Model.Cliams[i].IsSelected"
                        class="form-check-label"
                    >
                        @Model.Cliams[i].ClaimType
                    </label>
                </div>
            }
            <div
                asp-validation-summary="All"
                class="text-danger"
            ></div>

        </div>
        <div class="card-footer">
            <input
                type="submit"
                value="Update"
                class="btn btn-primary"
            />
            <a
                asp-controller="administration"
                asp-action="EditUser"
                asp-route-roleId="@Model.UserId"
                class="btn btn-primary"
            >Cancel</a>
        </div>
    </div>
</form>