@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <a
        asp-controller="Account"
        asp-action="Register"
        class="btn btn-primary mb-3"
    >
        Add new user
    </a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>

            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>

            <div class="card-footer">
                <form
                    asp-action="DeleteUser"
                    asp-route-id="@user.Id"
                    method="post"
                >
                    <a
                        asp-controller="Administration"
                        asp-action="EditUser"
                        asp-route-id="@user.Id"
                        class="btn btn-primary"
                    >Edit</a>

                    <span
                        id="confirmDeleteSpan_@user.Id"
                        style="display: none;"
                    >
                        <span>Are you sure you want to delete?</span>
                        <button
                            type="submit"
                            class="btn btn-danger"
                        >Yes
                        </button>
                        <button
                            type="button"
                            class="btn btn-outline-primary"
                            onclick="confirmDelete('@user.Id', false)"
                        >No</button>
                    </span>

                    <span id="deleteSpan_@user.Id">
                        <button
                            type="button"
                            class="btn btn-danger"
                            onclick="confirmDelete('@user.Id', true)"
                        >Delete</button>
                    </span>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a
                class="btn btn-primary"
                asp-controller="Account"
                asp-action="Register"
            >Add new user</a>
        </div>
    </div>
}

@section Scripts {
    <script>
        function confirmDelete(uniqueId, isDeleteClicked) {
            var deleteSpan = document.getElementById("deleteSpan_" + uniqueId);
            var confirmDeleteSpan = document.getElementById("confirmDeleteSpan_" + uniqueId);

            if (isDeleteClicked) {
                deleteSpan.style.display = "none";
                confirmDeleteSpan.style.display = "inline";
            } else {
                deleteSpan.style.display = "inline";
                confirmDeleteSpan.style.display = "none";
            }
        }
    </script>
}