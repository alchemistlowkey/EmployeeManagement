@model List<UserRolesViewModel>

@{
    var userId = ViewBag.userId;
}

<form
    method="post"
    class="mt-3"
>
    <div class="card">
        <div class="card-header">
            <h3>Manage User Roles</h3>
        </div>
        <div class="card-body">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-2">
                    <input
                        type="hidden"
                        asp-for="@Model[i].RoleId"
                    />
                    <input
                        type="hidden"
                        asp-for="@Model[i].RoleName"
                    />
                    <input
                        asp-for="@Model[i].IsSelected"
                        class="form-check-input"
                    />
                    <label
                        asp-for="@Model[i].IsSelected"
                        class="form-check-label"
                    >
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div
                asp-validation-summary="All"
                class="text-danger"
            ></div>

        </div>
        <div class="card-footer">
            <input
                type="submit"
                value="Update"
                class="btn btn-primary"
            />
            <a
                asp-controller="administration"
                asp-action="ListUsers"
                class="btn btn-primary"
            >Cancel</a>
        </div>
    </div>
</form>